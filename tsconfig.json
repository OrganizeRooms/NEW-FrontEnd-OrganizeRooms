{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target":  "es6",
    "allowSyntheticDefaultImports": true,
    // Novos no projeto
    "noEmitOnError": true,
    //"noImplicitAny": true,
    //"strictNullChecks": true,
    //
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6",
      "dom"
    ]
  }
}
